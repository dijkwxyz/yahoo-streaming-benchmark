#!/bin/bash
BASE_DIR=/home/ec2-user/yahoo-streaming-benchmark/

cmd=$*

prefix=test
# get curr username
user=`whoami`

echo "###### xdo from $user ######"
for((host=1; host <=12; host++)); do
        echo ------------ $prefix$host ------------
        ssh $user@$prefix$host "cd $BASE_DIR; $cmd"
done
