#! /bin/bash
BASE_DIR=~/yahoo-streaming-benchmark/

# get abs path
# cd -P track abs path
pdir=`cd -P $(dirname $p1); pwd`
echo pdir=$pdir

cmd=$*

prefix=test
# get curr username
user=`whoami`

for((host=1; host <=12; host++)); do
        echo ------------ $prefix$host ------------
        ssh $user@$prefix$host "cd $BASE_DIR; $cmd"
done
